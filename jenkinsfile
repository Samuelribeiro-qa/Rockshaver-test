pipeline {
    agent {
        docker { 
            image 'cypress/browsers:latest' 
            args '-u root --network rockshaver_skynet'
            }
    }
    stages {
        stage('Testes no Backend') {
            steps {
                dir('api') {
                    sh 'echo teste'
                }
            }
        }

        stage('Testes no Frontend (Mobile)') {
            steps {
                dir('mobile') {
                    sh 'npm install'
                    sh 'npx cypress install --force'
                    sh 'npx cypress run'
                }
            }
        }

        stage('Testes no Frontend (Web)') {
            steps {
                dir('web') {
                    sh 'npm install'
                    sh 'npx cypress install --force'
                    sh 'npx cypress run'                }
            }
        }
    }
}